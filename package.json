{
  "name": "webpack-js-library",
  "version": "1.0.0",
  "description": "webpack setup for writing a javascript library and making it available as script or npm package",
  "keywords": [],
  "homepage": "https://github.com/vyasriday/webpack-js-library#readme",
  "bugs": {
    "url": "https://github.com/vyasriday/webpack-js-library/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vyasriday/webpack-js-library.git"
  },
  "license": "MIT",
  "author": "Rick Staa",
  "main": "dist/bundle.js",
  "browser": "dist/bundle.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack build --config webpack.prod.js",
    "build:dev": "webpack build --config webpack.dev.js",
    "build:watch": "webpack build --watch --config webpack.dev.js",
    "clean": "rimraf node_modules dist",
    "preinstall": "npx only-allow pnpm",
    "sort": "sort-package-json",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "test/"
    ],
    "verbose": true
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-loader": "^8.2.3",
    "eslint": "^7.32.0",
    "jest": "24.9.0",
    "rimraf": "2.7.1",
    "sort-package-json": "^1.53.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "peerDependencies": {
    "lodash": "^4.17.21"
  }
}
